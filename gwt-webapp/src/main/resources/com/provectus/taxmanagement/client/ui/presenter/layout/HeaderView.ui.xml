<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='image' type='com.provectus.taxmanagement.client.resource.ImageBundle'/>

    <ui:style>
        .header__left {
            float: left;
            text-align: left;
        }

        .header__right {
            float: right;
            text-align: right;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:Image resource='{image.logo}'/>

        <g:HTMLPanel>
            <g:HTMLPanel ui:field="navigation" addStyleNames="{style.header__left}">
            </g:HTMLPanel>

            <g:HTMLPanel addStyleNames="{style.header__right}">
                <b:Label ui:field="login" />
                <b:Button type="LINK" ui:field="logoutButton">Выйти</b:Button>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 
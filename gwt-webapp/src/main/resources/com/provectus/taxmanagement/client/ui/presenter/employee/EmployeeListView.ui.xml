<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:table="urn:import:com.provectus.taxmanagement.client.ui.widget.table"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:filter="urn:import:com.palata22.tc.client.ui.widget.filter"
             xmlns:employee="urn:import:com.provectus.taxmanagement.client.ui.widget.employee">

    <b:Panel>
        <b:PanelHeader>
            <b:Heading size="H2" text="Employees"/>
        </b:PanelHeader>

        <b:PanelHeader>
            <b:Button ui:field="addEmployeeButton" type="PRIMARY" marginRight="10">Add</b:Button>
            <b:Button ui:field="editEmployeeButton" type="PRIMARY" marginRight="10">Edit</b:Button>
            <b:Button icon="REFRESH" marginRight="10" ui:field="refreshButton"/>
        </b:PanelHeader>

        <b:PanelBody>
            <employee:EmployeeTable ui:field="employeeTable" height="600px" />
        </b:PanelBody>
    </b:Panel>
</ui:UiBinder>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:style>
        .inline{
            display:inline-block;
        }

        .border {
            border: 1px solid #ccc;
        }

        .column {
            border: 1px solid #000000;
            text-align: center;
        }
    </ui:style>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_2" paddingLeft="0" marginTop="5" paddingRight="5">
                <b:InputGroup>
                    <b:TextBox placeholder="Name" autoComplete="false"/>
                    <b:InputGroupButton>
                        <b:Button icon="SEARCH"/>
                    </b:InputGroupButton>
                </b:InputGroup>

                <b:LinkedGroup>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User1"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User2"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User3"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User4"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User5"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User6"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:payment="urn:import:com.provectus.taxmanagement.client.ui.widget.payment"
        >

    <ui:style>
        .inline{
            display:inline-block;
        }

        .border {
            border: 1px solid #ccc;
        }

        .column {
            border: 1px solid #000000;
            text-align: center;
        }
    </ui:style>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_2" paddingLeft="0" marginTop="5" paddingRight="5">
                <b:InputGroup>
                    <b:TextBox placeholder="Name" autoComplete="false"/>
                    <b:InputGroupButton>
                        <b:Button icon="SEARCH"/>
                    </b:InputGroupButton>
                </b:InputGroup>

                <b:LinkedGroup>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User1"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User2"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User3"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User4"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User5"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User6"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User7"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User8"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User9"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                    <b:LinkedGroupItem>
                        <b:Heading size="H3" text="User10"/>
                        <b:LinkedGroupItemText text="Василий Петрович"/>
                    </b:LinkedGroupItem>
                </b:LinkedGroup>

                <b:Pagination>
                    <b:AnchorListItem text="1"/>
                    <b:AnchorListItem text="2"/>
                    <b:AnchorListItem text="3"/>
                </b:Pagination>
            </b:Column>
            <b:Column size="MD_10" paddingLeft="0" marginTop="5">
                <b:Form type="INLINE">
                    <b2:DatePicker viewSelect="MONTH" placeholder="Start Date"/>
                    <b2:DatePicker viewSelect="MONTH" placeholder="End Date"/>

                    <b:Button text="Add Payment" type="PRIMARY"/>

                    <b:Button text="Export"/>
                    <b:Button text="Import"/>
                </b:Form>

                <g:HTMLPanel ui:field="quarterPayments"/>

                <g:HTMLPanel>
                    <b:PageHeader subText="Styles for Buttons">Buttons</b:PageHeader>
                    <b:FluidRow>
                        <b:Column size="6">
                            <!-- <b:Table> -->
                            <!-- <b:TableHeader>Button</b:TableHeader> -->
                            <!-- <b:TableHeader>UiBinder</b:TableHeader> -->
                            <g:HTMLPanel>
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Button</th>
                                            <th>UiBinder</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        text="Default" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button>Default&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        type="PRIMARY" text="Primary" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    type="PRIMARY">Primary&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        type="INFO" text="Info" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    type="INFO">Info&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        type="SUCCESS" text="Success" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    type="SUCCESS">Success&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        type="WARNING" text="Warning" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    type="WARNING">Warning&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        type="DANGER" text="Danger" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    type="DANGER">Danger&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        type="INVERSE" text="Inverse" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    type="INVERSE">Inverse&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        type="LINK" text="Link" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    type="LINK">Link&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- </b:Table> -->
                            </g:HTMLPanel>
                        </b:Column>
                        <b:Column size="6">
                            <g:HTMLPanel>
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Button</th>
                                            <th>UiBinder</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        size="LARGE" text="Large"
                                                        loadingText="Loading..."
                                                        completeText="Done!" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    size="LARGE">Large&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        size="SMALL" text="Small" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    size="SMALL">Small&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button
                                                        size="MINI" text="Mini" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    size="MINI">Mini&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Button</th>
                                            <th>UiBinder</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <b:Button ui:field="enabled"
                                                          enabled="true" text="Enabled" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    enabled="true">Enabled&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b:Button ui:field="disabled"
                                                          enabled="false" text="Disabled" />
                                            </td>
                                            <td>
                                                <b:Code>&lt;b:Button
                                                    enabled="false">Disabled&lt;/b:Button></b:Code>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </g:HTMLPanel>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="H2">Block Level Button</b:Heading>
                            <b:Paragraph>
                                You can create block level buttons , those that span the full width of a parent, by set <b:Code>block=true</b:Code>.
                            </b:Paragraph>
                            <b:Well>
                                <b:Button block="true" type="PRIMARY">Block Level Button</b:Button>
                                <b:Button block="true">Block Level Button</b:Button>
                            </b:Well>
                            <b:Label>Code</b:Label>
                            <g:HTMLPanel><pre class="prettyprint linenums">&lt;b:Button block="true" type="PRIMARY"&gt;Block Level Button&lt;/b:Button&gt;</pre></g:HTMLPanel>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="H2">Try change Button state</b:Heading>
                            <b:Paragraph>
                                Please click adove buttons and below settings.
                            </b:Paragraph>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <b:Well>
                                <b:Button ui:field="effectiveButton">Change me!!</b:Button>
                            </b:Well>
                        </b:Column>
                        <b:Column size="8">
                            <b:WellForm type="HORIZONTAL">
                                <b:Fieldset>
                                    <b:Legend>Setup Button</b:Legend>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Type</b:ControlLabel>
                                        <b:Controls>
                                            <b:ButtonToolbar>
                                                <b:ButtonGroup toggle="radio">
                                                    <b:Button ui:field="defaultType"
                                                              text="Default" />
                                                    <b:Button ui:field="primary"
                                                              type="PRIMARY" text="Primary" />
                                                    <b:Button ui:field="info"
                                                              type="INFO" text="Info" />
                                                    <b:Button ui:field="success"
                                                              type="SUCCESS" text="Success" />
                                                    <b:Button ui:field="warning"
                                                              type="WARNING" text="Warning" />
                                                    <b:Button ui:field="danger"
                                                              type="DANGER" text="Danger" />
                                                    <b:Button ui:field="inverse"
                                                              type="INVERSE" text="Inverse" />
                                                    <b:Button ui:field="link"
                                                              type="LINK" text="Link" />
                                                </b:ButtonGroup>
                                            </b:ButtonToolbar>
                                        </b:Controls>
                                    </b:ControlGroup>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Size</b:ControlLabel>
                                        <b:Controls>
                                            <b:ButtonToolbar>
                                                <b:ButtonGroup toggle="radio">
                                                    <b:Button ui:field="large"
                                                              size="LARGE" text="Large"
                                                              loadingText="Loading..."
                                                              completeText="Done!" />
                                                    <b:Button ui:field="small"
                                                              size="SMALL" text="Small" />
                                                    <b:Button ui:field="mini"
                                                              size="MINI" text="Mini" />
                                                </b:ButtonGroup>
                                            </b:ButtonToolbar>
                                        </b:Controls>
                                    </b:ControlGroup>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Enable</b:ControlLabel>
                                        <b:Controls>
                                            <b:ButtonToolbar>
                                                <b:ButtonGroup toggle="radio">
                                                    <b:Button ui:field="disableButton">Set Disable</b:Button>
                                                    <b:Button ui:field="enableButton">Set Enable</b:Button>
                                                </b:ButtonGroup>
                                            </b:ButtonToolbar>
                                        </b:Controls>
                                    </b:ControlGroup>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Block</b:ControlLabel>
                                        <b:Controls>
                                            <b:CheckBox ui:field="block"/>
                                        </b:Controls>
                                    </b:ControlGroup>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Toggle</b:ControlLabel>
                                        <b:Controls>
                                            <b:CheckBox ui:field="toggle"/>
                                        </b:Controls>
                                    </b:ControlGroup>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Icon</b:ControlLabel>
                                        <b:Controls>
                                            <b:ValueListBox ui:field="icons"/>
                                            <b:ValueListBox ui:field="iconSize"/>
                                            <b:ValueListBox ui:field="iconPosition"/>
                                        </b:Controls>
                                    </b:ControlGroup>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Loading Text</b:ControlLabel>
                                        <b:Controls>
                                            <b:TextBox ui:field="loadingText" placeholder="loading text"/>
                                        </b:Controls>
                                    </b:ControlGroup>
                                    <b:ControlGroup>
                                        <b:ControlLabel>Complete Text</b:ControlLabel>
                                        <b:Controls>
                                            <b:TextBox ui:field="completeText" placeholder="complete text"/>
                                        </b:Controls>
                                    </b:ControlGroup>
                                </b:Fieldset>
                                <b:FormActions>
                                    <b:ButtonGroup toggle="radio">
                                        <b:Button ui:field="loading">Loading</b:Button>
                                        <b:Button ui:field="complete">Complete</b:Button>
                                        <b:Button ui:field="reset">Reset</b:Button>
                                    </b:ButtonGroup>
                                </b:FormActions>
                            </b:WellForm>
                        </b:Column>
                    </b:FluidRow>
                </g:HTMLPanel>

            </b:Column>
        </b:Row>
    </b:Container>
</ui:UiBinder>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:t="urn:import:com.provectus.taxmanagement.client.ui.widget.table"
>

    <ui:style>
        .quarterTable {
            margin-bottom: 0px;
            font-size: 12px;
        }

        th {
            text-align: center;
        }
    </ui:style>

    <b:Panel ui:field="panel" marginBottom="5">
        <b:PanelHeader>
            <b:Anchor text="???" marginRight="10" ui:field="anchor"/>
            <b:Button type="SUCCESS" icon="SAVE" size="EXTRA_SMALL"  marginRight="5" ui:field="saveButton"/>
            <b:Button type="DANGER" icon="REMOVE" size="EXTRA_SMALL" ui:field="removeButton"/>
        </b:PanelHeader>
        <b:PanelCollapse ui:field="panelCollapse" in="true">
            <b:PanelBody paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0">
                <t:QuarterTable addStyleNames="{style.quarterTable}"/>
            </b:PanelBody>
        </b:PanelCollapse>
    </b:Panel>
</ui:UiBinder>
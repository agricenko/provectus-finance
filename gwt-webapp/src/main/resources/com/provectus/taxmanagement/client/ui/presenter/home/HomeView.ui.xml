<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:html="urn:import:org.gwtbootstrap3.client.ui.html"
        >

    <ui:with field='image' type='com.provectus.taxmanagement.client.resource.ImageBundle'/>

    <ui:style>
        body {
            background-image: url("./image/homeBackground.jpg");
            background-repeat:no-repeat;
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;;
        }

        .contentPanel {
            width: 380px;
            top: 50%;
            position: absolute;
            left: 50%;
            margin-left: -190px;
            margin-top: -200px;
            padding: 40px 50px;
            border-radius: 3px;
            border-top: 1px solid #fafafa;
            background: #ffffff;
        }
    </ui:style>


    <g:HTMLPanel addStyleNames="{style.contentPanel}">
        <g:Image resource='{image.logo}'/>

        <g:SimplePanel ui:field="contentPanel" />
    </g:HTMLPanel>
</ui:UiBinder>
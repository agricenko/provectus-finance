<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <b:Panel>
        <b:PanelHeader>
            <b:Heading size="H3" text="Employee Information (* denotes required field)"/>
        </b:PanelHeader>
        <b:PanelBody>
            <b:Form>
                <b:FieldSet>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true">Имя</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <b:TextBox ui:field="firstName"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true">Фамилия</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <b:TextBox ui:field="lastName"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true">Отчество</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <b:TextBox ui:field="secondName"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true">E-mail</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <b:TextBox ui:field="email"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true">Отдел</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <b:TextBox ui:field="department"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true">Комментарий</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <b:TextBox ui:field="comment"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true">Налоговая ставка</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <b:IntegerBox ui:field="taxPercentage" value="5"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel>КВЕД (список строковых значений):</b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
                        <!--<b:TextBox ui:field="kved"/>-->
                    </b:FormGroup>

                </b:FieldSet>
            </b:Form>
        </b:PanelBody>
        <b:PanelFooter>
            <b:Button text="Save" ui:field="saveButton"/>
            <b:Button text="Cancel" ui:field="cancelButton"/>
        </b:PanelFooter>
    </b:Panel>
</ui:UiBinder>